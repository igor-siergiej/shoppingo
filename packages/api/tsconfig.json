{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2020",
        "noImplicitAny": true,
        "outDir": "build",
        "preserveConstEnums": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "rootDir": "./src",
        "skipLibCheck": true,
        "paths": {
            "@shoppingo/types": [
                "../types/src"
            ]
        }
    },
    "ts-node": {
        "files": true
    },
    "include": [
        "src/**/*",
        "types/**/*.d.ts",
        "types/*.d.ts"
    ],
    "references": [
        {
            "path": "../types"
        }
    ]
}
