{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "jsx": "react-jsx",
      "useDefineForClassFields": true,
      "isolatedModules": true,
      "noEmit": true,
      "emitDeclarationOnly": false,
      "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"],
      "paths": {
        "@shoppingo/types": ["../types/src"],
        "@/*": ["./src/*"]
      }
    },
    "include": [
      "src",
      "vite-env.d.ts",
      "global.d.ts"
    ],
    "references": [
      { "path": "../types" }
    ]
  }
  